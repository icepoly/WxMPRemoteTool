<!--index.wxml-->
<view class="container">
    <!-- 用户登录 -->
    <view class="userinfo" bindtap="login">
        <image
            class="userinfo-avatar"
            src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}"
            background-size="cover"
        ></image>
        <view>
            <text class="userinfo-nickname">{{logged ? userInfo.nickName : '登录'}}</text>
            <text class="userinfo-nickname" wx:if="{{logged}}">{{userInfo.lastLoginTime}}</text>
        </view>
    </view>

    <button class="weui-btn" type="default" plain="true" bindtap="getTaskInfo">任务状态</button>

    <button class="weui-btn" type="default" plain="true" bindtap="doCheckIn">CheckIn</button>

    <button class="weui-btn" type="default" plain="true" bindtap="doCheckOut">CheckOut</button>
</view>
